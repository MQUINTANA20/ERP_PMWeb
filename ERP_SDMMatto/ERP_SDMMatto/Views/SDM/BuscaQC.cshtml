@model IEnumerable<ERP_SDMMatto.Models.clsQuickCheck>

@{
    ViewBag.Title = "BuscaQC";
    Layout = "~/Views/Shared/VwPrincipal.cshtml";
}

@section sidebar{

    <li class="active">@ERP_SDMMatto.Properties.Resources.BuscaQC</li>
}




