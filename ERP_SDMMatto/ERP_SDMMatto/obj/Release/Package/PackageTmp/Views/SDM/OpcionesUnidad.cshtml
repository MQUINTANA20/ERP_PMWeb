    <div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "SDM")'">Inicio</button>

        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("ListarQuickCheck", "SDM", new { idOrden = Model.ID, serieU = Model.Serie})'">@ERP_SDMMatto.Properties.Resources.CapturaItems</button>
