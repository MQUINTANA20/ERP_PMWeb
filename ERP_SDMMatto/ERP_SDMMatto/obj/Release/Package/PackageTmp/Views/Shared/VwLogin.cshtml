@{

    Layout = null;

}

<!DOCTYPE html>

<html lang="es" id="idHtml">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">


    <title>ERP</title>
    @using System.Web.Optimization
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/ResolucionPantalla")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css/bootstrap")
    @RenderSection("scripts", required: false)

    <style>
        .vertical-center {
            min-height: 100%; /* Fallback for browsers do NOT support vh unit */
            min-height: 100vh; /* These two lines are counted as one :-)       */
            display: flex;
            align-items: first baseline;
        }
    </style>

</head>

<body class="loginBody">
    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <div class="col-md-">
                    <a class="navbar-brand mainLogo" href="#">CAMSOL </a> <span class="navbar-brand">PM SERVICIO A DOMICILIO</span>

                </div>


            </div>
        </div>
    </nav>
    <div class="container-fluid top-buffer-interna">
        <div class="row">

            <div class="col-md-12">
                @{ Html.RenderPartial("_Alerts"); }
                <div id="messages"></div>
            </div>
        </div>
    </div>
    <div class="jumbotron vertical-center">

        <div class="container-fluid">
            <div class="row top-buffer-login">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
        <script type="text/javascript">
            var previousPage = window.location.href;

            function showModal() {

                $('#myModal').modal('show');

            }
            $(document).ready(function () {
                window.setTimeout(function () {
                    $(".alert-success").slideUp(500, function () { $(".alert-success").alert('close'); });
                    $(".alert-warning").slideUp(500, function () { $(".alert-warning").alert('close'); });
                    $(".alert-info").slideUp(500, function () { $(".alert-info").alert('close'); });
                    $(".alert-danger").slideUp(500, function () { $(".alert-danger").alert('close'); });
                }, 4000);
            });

        </script>
</body>
</html>
